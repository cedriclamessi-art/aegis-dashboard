# =============================================================================
# AEGIS v5.0 - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/aegis_v5
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aegis_v5
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-encryption-key-exactly-32-characters-long

# Session secret
SESSION_SECRET=your-session-secret-minimum-32-characters

# =============================================================================
# META (FACEBOOK/INSTAGRAM) CONFIGURATION
# =============================================================================
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_meta_access_token
META_API_VERSION=v18.0
META_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# TIKTOK ADS CONFIGURATION
# =============================================================================
TIKTOK_APP_ID=your_tiktok_app_id
TIKTOK_APP_SECRET=your_tiktok_app_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_API_VERSION=v1.3
TIKTOK_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# GOOGLE ADS CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
GOOGLE_DEVELOPER_TOKEN=your_developer_token
GOOGLE_CUSTOMER_ID=your_customer_id

# =============================================================================
# PINTEREST CONFIGURATION
# =============================================================================
PINTEREST_APP_ID=your_pinterest_app_id
PINTEREST_APP_SECRET=your_pinterest_app_secret
PINTEREST_ACCESS_TOKEN=your_pinterest_access_token
PINTEREST_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# SHOPIFY CONFIGURATION
# =============================================================================
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/aegis.log
LOG_MAX_FILES=30
LOG_MAX_SIZE=10m

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Sentry (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# =============================================================================
# QUEUE & JOBS CONFIGURATION
# =============================================================================
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000
SCHEDULER_ENABLED=true

# =============================================================================
# AI AGENTS CONFIGURATION
# =============================================================================
AGENTS_ENABLED=true
AGENTS_MAX_CONCURRENT=10
AGENTS_TIMEOUT_MS=30000
AGENTS_RETRY_ATTEMPTS=2

# OpenAI (if using)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# =============================================================================
# EMAIL CONFIGURATION (optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@aegis.io

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# S3 Backup (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=aegis-backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_WEBHOOKS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_PREMIUM_AGENTS_ENABLED=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
DEBUG=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=false
